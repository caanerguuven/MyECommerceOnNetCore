@model IEnumerable<Product>

<div class="widget">
    <h4>FEATURED</h4>
    <div class="products-list">
        @foreach (var product in Model)
        {
            <div class="media">
                <a class="media-left" href="#">
                    <img alt="" class="img-responsive product-thumb" src="~/images/products/thumbs/@product.ProductImageUrl">
                </a>
                <div class="media-body">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="product-title">@product.ProductName</a>
                    <p class="product-price">$@product.ProductPrice</p>
                </div>
            </div>
        }

    </div>
</div>