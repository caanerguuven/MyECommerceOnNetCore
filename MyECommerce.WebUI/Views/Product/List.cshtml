@model ProductPageModel

@{
    ViewData["Title"] = "List";
}

<section id="shop" class="container">
    <div class="row">
        <!-- sidebar start -->
        <div id="sidebar" class="col-md-3">
            <div class="widget">
                <form class="form-inline">
                    <div class="input-group">
                        <input type="text" class="form-control input-lg" placeholder="Search...">
                        <span class="input-group-btn">
                            <button class="btn btn-default btn-lg" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </form>
            </div>

            @await Component.InvokeAsync("CategoryMenu")

            @await Component.InvokeAsync("FeaturedProducts")

        </div>
        <!-- sidebar end -->
        <!-- right column start -->
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12 wow fadeIn">
                    <div class="row product-results">
                        <div class="product-results">
                            <div class="col-xs-8">
                                <p class="woocommerce-result-count">There are @Model.PageModel.TotalItems products in the system. </p>
                            </div>
                        </div>
                    </div>
                </div>

                @foreach (var product in Model.Products)
                {
                    @Html.Partial("_ProductItem", product)
                }



            </div>
        </div>
        <div page-model="@Model.PageModel" page-action ="List"></div>
        <!-- right column end -->
    </div>

</section>
