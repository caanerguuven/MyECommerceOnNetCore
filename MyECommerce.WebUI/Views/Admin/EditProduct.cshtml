@model Product
@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditProduct</h2>

<form asp-controller="Admin" asp-action="EditProduct" method="post" enctype="multipart/form-data">
    <input type="hidden" id="ProductId" name="ProductId" value="@Model.ProductId" />
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" value="@Model.ProductName" />
    </div>

    <div class="form-group">
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="HtmlContent"></label>
        <input asp-for="HtmlContent" class="form-control" />
    </div>

    <div class="form-group">
        <img src="~/images/products/thumbs/@Model.ProductImageUrl" width="60" alt="@Model.ProductImageUrl" />
        <input type="hidden" id="ProductImageUrl" name="ProductImageUrl" value="@Model.ProductImageUrl" />
        <input type="file" name="file" id="file" class="form-control" />

    </div>

    <div class="form-group">
        @{
            var activeChecked = Model.IsActive == false ? "" : "checked='checked'";
            var approvedChecked = Model.IsApproved == false ? "" : "checked='checked'";
            var featuredChecked = Model.IsFeatured == false ? "" : "checked='checked'";
            var homeChecked = Model.IsHome == false ? "" : "checked='checked'";

            <input asp-for="IsActive" type="checkbox" @activeChecked />
            <label asp-for="IsActive"> Active </label>

            <input asp-for="IsApproved" type="checkbox" @approvedChecked />
            <label asp-for="IsApproved"> Approved </label>

            <input asp-for="IsFeatured" type="checkbox" @featuredChecked />
            <label asp-for="IsFeatured"> Featured </label>

            <input asp-for="IsHome" type="checkbox" @homeChecked />
            <label asp-for="IsHome"> Home </label>
        }

    </div>

    <input type="submit" class="btn btn-primary" value="Save" />
</form>


